<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Reception Table</h1>
    <table border="1">
      <th>PatientId</th>
      <th>Name</th>
      <th>Address</th>
      <th>PhoneNo</th>
      <th></th>
      <th></th>
      <tbody>
        <% for(var i=0;i<reception.length;i++) {%>
          <tr>
            <td><%=reception[i].patientid%></td>
            <td><%= reception[i].name%></td>
            <td><%= reception[i].address%></td>
            <td><%= reception[i].phno%></td>
            <td><a href="/updateReceptionData/<%= reception[i]._id%>"> <input type="button" name="btn1" value="Update"></a> </td>
            <td><input type="button" name="btn2" value="Delete" onclick="del('<%= reception[i]._id%>')"> </td>
          </tr>
          <% }%>
      </tbody>
    </table>
  </body>
  <script type="text/javascript">
    function del(id){
      var y=confirm("Are you sure");
      if(y) location.href="/deleteReceptionInfo/"+id;

    }
  </script>
</html>
