<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Expense Table</h1>
    <table border="1">
      <th>Medicine</th>
      <th>Cost</th>

      <th></th>
      <th></th>
      <tbody>
        <% for(var i=0;i<expense.length;i++) {%>
          <tr>
            <td><%= expense[i].medicine%></td>
            <td><%=expense[i].cost%></td>

            <td><a href="/updateExpense/<%=expense[i]._id%>"> <input type="button" name="btn1" value="Update"></a> </td>
            <td><input type="button" name="btn2" value="Delete" onclick="del('<%=expense[i]._id%>')"> </td>
          </tr>
          <% }%>
          </tbody>
  </body>
  <script type="text/javascript">
    function del(id){
      var y=confirm("Are you sure");
      if(y) location.href="/deleteExpense/"+id;
    }
  </script>
</html>
