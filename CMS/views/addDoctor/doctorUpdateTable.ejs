  <body>
    <h1>Doctor Update Table</h1>
    <form  action="/updateDoctorInfo" method="post">
      <input type="hidden" name="id" value="<%=doctor._id%>">
      <label for="">Name:</label>
      <input type="text" name="name"  value="<%=doctor.name%>"><p>
      <label for="">Address:</label>
      <input type="text" name="address"  value="<%=doctor.address%>"><p>
      <label for="">PhoneNo:</label>
      <input type="text" name="phno"  value="<%=doctor.phno%>"><p>
      <label for="">Treat:</label>
      <input type="text" name="treat"  value="<%=doctor.treat%>"><p>
      <label for="">Treat_Day:</label>
      <select name="treatDay" id="select">
      <option value="Monday">Monday</option>
      <option value="Tuseday">Tuseday</option>
      <option value="Wednesday">Wednesday</option>
      <option value="Thuraday">Thuraday</option>
      <option value="Friday">Friday</option>
      <option value="Saturday">Saturday</option>
      <option value="Sunday">Sunday</option>
      </select><p>
      <label for="">Start_Time:</label>
      <input type="time" name="startTime"  value="<%=doctor.startTime%>"><p>
      <label for="">Start_Time:</label>
      <input type="time" name="endTime"  value="<%=doctor.endTime%>"><p>
      <input type="text" name="count"  value="<%=doctor.count%>"><p>
      <input type="text" name="percentage"  value="<%=doctor.percentage%>"><p>
      <input type="Submit" name="" value="Submit">
      <input type="button" name="" value="Cancel" onclick="can()">
    </form>
