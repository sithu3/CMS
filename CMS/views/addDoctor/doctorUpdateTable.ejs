<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script type="text/javascript">
 $(document).ready(()=>{


            if(<%= doctor.treatDay == 'Monday'%>)
            $("#select").val('Monday')
            else if(<%= doctor.treatDay == 'Tuseday'%>)
            $("#select").val('Tuseday')
            else if(<%= doctor.treatDay == 'Wednesday'%>)
            $("#select").val('Wednesday')
            else if(<%= doctor.treatDay == 'Thuraday'%>)
            $("#select").val('Thuraday')
            else if(<%= doctor.treatDay == 'Friday'%>)
            $("#select").val('Friday')
            else if(<%= doctor.treatDay == 'Saturday'%>)
            $("#select").val('Saturday')
            else if(<%= doctor.treatDay == 'Sunday'%>)
            $("#select").val('Sunday')




        });
</script>
