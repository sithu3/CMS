<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Appointment Table</title>
  </head>
  <body>
    <table border="1">
      <thead>
        <th>Name</th>
        <th>Day</th>
        <th>Time</th>
        <th>Doctor</th>
        <th>Treat</th>
        <th></th>
        <th></th>
      </thead>
      <tbody>
        <% for(var i=0; i<appointment.length; i++){ %>
          <tr>
            <td><%= appointment[i].name%></td>
            <td><%= appointment[i].day%></td>
            <td><%= appointment[i].time%></td>
            <td><%= appointment[i].doctor%></td>
            <td><%= appointment[i].treatment%></td>
            <td> <a href="/updateAppointment/<%= appointment[i]._id%>"><input type="button" name="btn1" value="Update"></a></td>
            <td><input type="button" name="btn2" value="Delete" onclick="del('<%= appointment[i]._id%>')"></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
  <script type="text/javascript">
    function del(id){
      var y=confirm("Are you sure");
      if(y) location.href="/deleteAppointment/"+id;

    }
  </script>
</html>
