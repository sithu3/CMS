<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script type="text/javascript">
 $(document).ready(()=>{
            if(<%= patient.married == 'Single'%>)
            $("#select").val('Single');
            else if(<%= patient.married == 'Married'%>)
              $("#select").val('Married');
              else if(<%= patient.married == 'Other'%>)
                $("#select").val('Other');



                if(<%= patient.gender == 'Male'%>)
                $("#gender").val('Male');
                else if(<%= patient.gender == 'Female'%>)
                  $("#gender").val('Female');


                  if(<%= patient.blood == 'A'%>)
                  $("#blood").val('A');
                  else if(<%= patient.blood == 'B'%>)
                    $("#blood").val('B');
                    else if(<%= patient.blood == 'O'%>)
                      $("#blood").val('O');
                      else if(<%= patient.blood == 'AB'%>)
                        $("#blood").val('AB');


              if(<%= patient.gender == 'Male'%>)
                $("#radio_male").attr('checked', true);
                else   if(<%= patient.gender == 'Female'%>)
                    $("#radio_female").attr('checked', true);
        });
</script>
  </head>
  <body>
    <h1>Patient Detail Update</h1>
    <form class="" action="/updateDataRegistration" method="post">
     <input type="hidden" name="id" value="<%=patient._id%>">
      <label for="">Name:</label>
      <input type="text" name="name" value="<%=patient.name %>"><p>
      <label for="">Age:</label>
      <input type="text" name="age" value="<%=patient.age %>"><p>
      <label for="">Date:</label>
      <input type="date" name="date1" value="<%=patient.date1 %>"><p>


        <!-- <%=patient.gender %> -->
        <label for="gender">Gender</label>
        <input type="checkbox" name="gender" value="Male" id="radio_male">Male
          <input type="checkbox" name="gender" value="Female" id="radio_female">Female
      <p>
      <label for="">Married:</label>
      <select  name="married" id="select">
        <!-- <%=patient.married %> -->
        <option value="Single">Single</option>
        <option value="Married">Married</option>
        <option value="Other">Other</option>
      </select><p>
      <label for="">Address:</label>
      <input type="text" name="address" value="<%=patient.address %>"><p>
      <label for="">Phone No:</label>
      <input type="text" name="phone" value="<%=patient.phone %>"><p>
      <label for="">Date of Birth:</label>
      <input type="date" name="date2" value="<%=patient.date2 %>"><p>
      <label for="">Type of Blood:</label>
      <select id="blood" name="blood">
        <!-- <%=patient.blood %> -->
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="O">O</option>
        <option value="AB">AB</option>
      </select><p>
      <label for="">Complain:</label>
      <input type="text" name="complain" value="<%=patient.complain %>"><p>

      <input type="submit" name="btn" value="Update">
      <input type="button" name="btn" value="Cancel" onclick="go();">
    </form>
  </body>
  <script type="text/javascript">
    function go() {
      location.href="/returnDataPatientRegistration";
    }
  </script>
</html>
