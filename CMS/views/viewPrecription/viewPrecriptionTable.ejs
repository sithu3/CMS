<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Prescription tabel</title>
  </head>
  <body>
    <h2>Clinic Management System</h2>
    <table border="1">
      <thead>
          <th>Patient Id</th>
          <th>Name</th>
          <th>Disease</th>
          <th>Prescription</th>
          <th></th>
          <th></th>
      </thead>
      <tbody>
        <% for(var i=0; i<prescription.length; i++){ %>
        <tr>
          <td><%= prescription[i].pid%></td>
          <td><%= prescription[i].name%></td>
          <td><%= prescription[i].disease%></td>
          <td><%= prescription[i].prescript%></td>
          <td><%= prescription[i].treat%></td>
          <td><a href="/updateViewPrecriptionTable/<%= prescription[i]._id%>"> <input type="button" name="btn1" value="Update"></a> </td>
          <td><input type="button" name="btn2" value="Delete" onclick="del('<%= prescription[i]._id%>')"> </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
  <script type="text/javascript">
    function del(id){
      var y=confirm("Are you sure");
      if(y) location.href="/deleteViewPrecription/"+id;

    }
  </script>
</html>
