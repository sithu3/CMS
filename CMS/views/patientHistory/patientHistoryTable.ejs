<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Patient History Table</h1>
    <table border="1">
      <th>Name</th>
      <th>Disease</th>
      <th>Medicine</th>
      <th>Date</th>
      <th>Doctor</th>
      <tbody>
        <% for(var i=0;i<patient.length;i++) {%>
          <tr>
            <td><%= patient[i].name%></td>
            <td><%= patient[i].disease%></td>
            <td><%= patient[i].medicine%></td>
            <td><%= patient[i].date%></td>
            <td><%= patient[i].doctor%></td>
            <td><a href="/updatePatientHistory/<%= patient[i]._id%>"> <input type="button" name="btn1" value="Update"></a> </td>
            <td><input type="button" name="btn2" value="Delete" onclick="del('<%= patient[i]._id%>')"> </td>
          </tr>
          <% }%>
      </tbody>
    </table>
  </body>
  <script type="text/javascript">
    function del(id){
      var y=confirm("Are you sure");
      if(y) location.href="/deletePatientHistory/"+id;

    }
  </script>
</html>
